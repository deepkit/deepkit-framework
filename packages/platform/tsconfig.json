
{
    "$schema": "https://json.schemastore.org/tsconfig",  
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "module": "NodeNext",
        "target": "ESNext",
        "outDir": "./dist/cjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": ["src"]
  }