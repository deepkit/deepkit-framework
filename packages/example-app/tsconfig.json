{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "CommonJS",
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist",
    "jsx": "react-jsx",
    "jsxImportSource": "@deepkit/template"
  },
  "ts-node": {
    "experimentalResolver": true
  },
  "reflection": true,
  "includes": [
    "*.ts",
    "*.tsx"
  ]
}
