{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./dist/cjs",
    "declaration": true,
    "composite": true,
    "lib": [
      "es2020",
      "es2022.error"
    ],
    "types": [
      "dot-prop",
      "node"
    ]
  },
  "reflection": true,
  "include": [
    "src",
    "index.ts"
  ],
  "exclude": [
    "tests"
  ],
  "references": [
    {
      "path": "../bench/tsconfig.json"
    }
  ]
}