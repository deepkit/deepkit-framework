{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./dist/cjs",
    "declaration": true,
    "composite": true,
    "types": [],
  },
  "reflection": true,
  "include": ["src", "index.ts", "node_modules/@deepkit/api-console-gui/src/api.ts"],
  "exclude": ["tests"],
  "references": [
