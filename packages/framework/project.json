{
  "name": "framework",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/framework/src",
  "projectType": "library",
  "implicitDependencies": ["framework-debug-gui"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.build.json",
        "rollupConfig": "packages/rollup.config.js",
        "project": "{projectRoot}/package.json",
        "additionalEntryPoints": [
          "{projectRoot}/src/loader.ts",
          "{projectRoot}/src/resolve.js"
        ],
        "format": ["esm", "cjs"],
        "generateExportsField": true,
        "external": "all",
        "compiler": "tsc"
      }
    },
    "release": {
      "command": "release-it --config={projectRoot}/.release-it.json"
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/framework/**/*.ts",
          "packages/framework/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "dependsOn": [
        {
          "projects": ["sql"],
          "target": "build"
        },
        {
          "projects": ["framework-debug-gui"],
          "target": "build"
        }
      ],
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/framework/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": ["framework"]
}
