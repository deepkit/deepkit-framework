{
  "name": "type-spec",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/type-spec/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "rollupConfig": "packages/rollup.config.js",
        "project": "{projectRoot}/package.json",
        "format": [
          "esm",
          "cjs"
        ],
        "generateExportsField": true,
        "external": "all",
        "compiler": "tsc"
      }
    },
    "release": {
      "command": "release-it --config={projectRoot}/.release-it.json"
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/type-spec/**/*.ts",
          "packages/type-spec/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/type-spec/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": [
    "type-spec"
  ]
}
