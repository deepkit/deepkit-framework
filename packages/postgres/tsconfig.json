{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "CommonJS",
    "lib": [
      "es2020",
      "es2022.error"
    ],
    "esModuleInterop": true,
    "outDir": "./dist/cjs",
    "declaration": true,
    "composite": true,
    "types": [
      "pg",
      "sqlstring"
    ],
    "skipLibCheck": true
  },
  "reflection": [
    "src/config.ts",
    "tests/**/*.ts"
  ],
  "include": [
    "src",
    "index.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "tests"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../orm/tsconfig.json"
    },
    {
      "path": "../orm-integration/tsconfig.json"
    },
    {
      "path": "../sql/tsconfig.json"
    },
    {
      "path": "../stopwatch/tsconfig.json"
    },
    {
      "path": "../type/tsconfig.json"
    }
  ]
}