{
  "name": "sql",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/sql/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "rollupConfig": "packages/rollup.config.js",
        "project": "{projectRoot}/package.json",
        "additionalEntryPoints": [
          "{projectRoot}/src/browser.ts",
          // FIXME: Cannot find module '@deepkit/sql/commands' or its corresponding type declarations.
          "{projectRoot}/src/commands.ts",
          "{projectRoot}/src/main.ts"
        ],
        "format": ["esm", "cjs"],
        "generateExportsField": true,
        "external": "all",
        "compiler": "tsc"
      }
    },
    "release": {
      "command": "release-it --config={projectRoot}/.release-it.json"
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/sql/**/*.ts",
          "packages/sql/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/sql/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": ["sql"]
}
