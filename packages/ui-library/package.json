{
  "name": "@deepkit/ui-library",
  "version": "1.0.1",
  "description": "Collection of utilities for Deepkit's graphical user interfaces",
  "repository": "https://github.com/deepkit/deepkit-framework",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "sideEffects": false,
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    "./package.json": {
      "default": "./package.json"
    },
    "./src/styles/style-code.scss": {
      "default": "./src/styles/style-code.scss"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/fesm2022/deepkit-ui-library.mjs"
    }
  },
  "scripts": {
    "build": "rm -rf .angular && ng-packagr --config tsconfig.prod.json && rm dist/.npmignore",
    "watch": "ng-packagr --config tsconfig.prod.json --watch"
  },
  "peerDependencies": {
    "@angular/common": "20.0.4",
    "@angular/core": "^20.0.4",
    "@angular/forms": "^20.0.4",
    "@deepkit/core": "^1.0.1",
    "@deepkit/desktop-ui": "^1.0.1",
    "@deepkit/rpc": "^1.0.1",
    "@deepkit/type": "^1.0.1"
  },
  "dependencies": {
    "prismjs": "^1.24.1"
  },
  "devDependencies": {
    "@deepkit/core": "^1.0.1",
    "@deepkit/desktop-ui": "^1.0.1",
    "@deepkit/rpc": "^1.0.1",
    "@deepkit/type": "^1.0.1",
    "ng-packagr": "^20.0.1",
    "rxjs": "~7.8.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.spec.ts"
    ]
  }
}
