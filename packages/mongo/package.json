{
  "name": "@marcj/marshal-mongo",
  "version": "2.1.13",
  "description": "Marshal's Mongo database management.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest --coverage",
    "tsc": "tsc",
    "tsc-watch": "rm -rf dist && tsc --watch"
  },
  "repository": "https://github.com/marcj/marshal",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "peerDependencies": {
    "mongodb": "^3.1.13",
    "rxjs": "~6.5.3"
  },
  "dependencies": {
    "@marcj/estdlib": "^0.1.18",
    "@marcj/marshal": "^2.1.13",
    "buffer": "^5.4.3",
    "mongo-uuid": "^1.0.0"
  },
  "devDependencies": {
    "@types/mongodb": "^3.1.12",
    "moment": "^2.0.0",
    "mongodb": "^3.1.13",
    "rxjs": "~6.5.3"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/lib/**/*",
      "!**/*.d.ts",
      "!index.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
