{
  "name": "@marcj/marshal-mongo",
  "version": "0.4.7",
  "description": "Marshal's Mongo database management.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest --coverage",
    "tsc": "tsc"
  },
  "repository": "https://github.com/marcj/marshal",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "peerDependencies": {
    "mongodb": "^3.1.8"
  },
  "dependencies": {
    "@marcj/marshal": "^0.4.7",
    "mongo-uuid": "^1.0.0"
  },
  "devDependencies": {
    "@types/mongodb": "^3.1.12",
    "buffer": "^5.2.1",
    "mongodb": "^3.1.8"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/lib/**/*",
      "!**/*.d.ts",
      "!index.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  },
  "publishConfig": {
    "access": "public"
  }
}
