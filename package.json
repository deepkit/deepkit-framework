{
  "name": "root",
  "repository": "https://github.com/marcj/marshal",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage",
    "bootstrap": "lerna bootstrap --hoist --no-ci",
    "tsc": "lerna run tsc"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.12.5",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lerna": "^3.4.3",
    "prettier": "^1.16.4",
    "reflect-metadata": "^0.1.12",
    "ts-jest": "^23.10.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^2.9.2"
  },
  "engines": {
    "node": ">= 8.9.0"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/lib/**/*",
      "!**/*.d.ts",
      "!index.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
