{
  "name": "@marcj/marshal",
  "version": "0.4.0",
  "description": "Marshal is a library to marshal JSON-representable data from JSON to class instance to Mongo and vice versa.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest --coverage",
    "tsc": "tsc"
  },
  "repository": "https://github.com/marcj/marshal",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "peerDependencies": {
    "buffer": "^5.2.1"
  },
  "dependencies": {
    "clone": "^2.1.2",
    "get-parameter-names": "^0.3.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/clone": "^0.1.30",
    "buffer": "^5.2.1"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/lib/**/*",
      "!**/*.d.ts",
      "!index.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  },
  "publishConfig": {
    "access": "public"
  }
}
