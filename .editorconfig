# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{tsx,ts,jsx,js}]
quote_type = single
indent_size = 4

[*.{html,spec.ts}]
max_line_length = 250

[packages/type-compiler/src/compiler.ts]
max_line_length = 250

[*.md]
max_line_length = off
trim_trailing_whitespace = false
