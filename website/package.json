{
  "name": "website",
  "version": "0.0.0",
  "scripts": {
    "app:start": "NODE_OPTIONS=--preserve-symlinks ng serve",
    "app:build": "NODE_OPTIONS=--preserve-symlinks ng build --configuration production",
    "app:build:dev": "NODE_OPTIONS=--preserve-symlinks ng build --watch --configuration development",
    "app:watch": "NODE_OPTIONS=--preserve-symlinks ng build --watch --configuration development",
    "app:test": "NODE_OPTIONS=--preserve-symlinks ng test",
    "ssr:build": "NODE_OPTIONS=--preserve-symlinks ng run app:server",
    "ssr:watch": "NODE_OPTIONS=--preserve-symlinks ng run app:server:development --watch",
    "server": "NODE_OPTIONS=--preserve-symlinks TS_NODE_PROJECT=tsconfig.server.json node -r ts-node/register -r tsconfig-paths/register src/server/app.ts server:start",
    "server:prod": "TS_NODE_BASEURL=dist node -r tsconfig-paths/register dist/src/server/app.js server:start",
    "server:build": "tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "server:watch": "NODE_OPTIONS=--preserve-symlinks TS_NODE_PROJECT=tsconfig.server.json node -r ts-node/register -r tsconfig-paths/register --watch src/server/app.ts server:start",
    "dev:frontend": "rm -rf .angular && concurrently --kill-others \"npm run app:watch\" \"npm run ssr:watch\"",
    "dev": "rm -rf .angular && concurrently --kill-others \"npm run app:watch\" \"npm run ssr:watch\" \"npm run server:watch\"",
    "app": "NODE_OPTIONS=--preserve-symlinks TS_NODE_PROJECT=tsconfig.server.json node -r ts-node/register -r tsconfig-paths/register src/server/app.ts",
    "build": "concurrently npm:app:build npm:ssr:build npm:server:build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "private": true,
  "dependencies": {
    "@angular/ssr": "^18.0.1",
    "@deepkit/app": "^1.0.1-alpha.143",
    "@deepkit/broker": "^1.0.1-alpha.143",
    "@deepkit/bson": "^1.0.1-alpha.143",
    "@deepkit/core": "^1.0.1-alpha.143",
    "@deepkit/core-rxjs": "^1.0.1-alpha.143",
    "@deepkit/desktop-ui": "^1.0.1-alpha.143",
    "@deepkit/event": "^1.0.1-alpha.143",
    "@deepkit/filesystem": "^1.0.1-alpha.143",
    "@deepkit/framework": "^1.0.1-alpha.144",
    "@deepkit/http": "^1.0.1-alpha.143",
    "@deepkit/injector": "^1.0.1-alpha.143",
    "@deepkit/logger": "^1.0.1-alpha.143",
    "@deepkit/mongo": "^1.0.1-alpha.144",
    "@deepkit/orm": "^1.0.1-alpha.143",
    "@deepkit/postgres": "^1.0.1-alpha.144",
    "@deepkit/rpc": "^1.0.1-alpha.143",
    "@deepkit/rpc-tcp": "^1.0.1-alpha.143",
    "@deepkit/sql": "^1.0.1-alpha.144",
    "@deepkit/stopwatch": "^1.0.1-alpha.143",
    "@deepkit/template": "^1.0.1-alpha.143",
    "@deepkit/type": "^1.0.1-alpha.143",
    "@deepkit/workflow": "^1.0.1-alpha.143",
    "angular-plotly.js": "^5.2.2",
    "discord.js": "^14.13.0",
    "gray-matter": "^4.0.3",
    "marked": "^9.0.0",
    "ngx-markdown": "^18.0.0",
    "openai": "^4.24.7",
    "plotly.js-dist-min": "^2.27.0",
    "pybridge": "^1.1.0",
    "rehype-raw": "^4.0.0",
    "rehype-react": "^5.0.0",
    "rehype-slug": "^3.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "rxjs": "~7.8.0",
    "rxjs-for-await": "^1.0.0",
    "tiny-glob": "^0.2.9",
    "unified": "^11.0.3",
    "unist-util-visit": "2.0.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.1",
    "@angular/animations": "^18.0.0",
    "@angular/cdk": "^18.0.0",
    "@angular/cli": "~18.0.1",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/platform-server": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@deepkit/type-compiler": "^1.0.1-alpha.102",
    "@types/jest": "^29.5.5",
    "@types/prismjs": "^1.26.0",
    "concurrently": "^8.2.1",
    "jest": "^29.7.0",
    "prismjs": "^1.29.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.3.0",
    "typescript": "~5.4.5",
    "zone.js": "~0.14.3"
  }
}
